#! /bin/zsh

export LANG=en_US.UTF-8

if [ -f ~/.functions.sh ]; then
  source ~/.functions.sh
fi

if [ -f ~/.aliases.sh ]; then
  source ~/.aliases.sh
fi

if [ -f ~/.environment.sh ]; then
  source ~/.environment.sh
fi

if [ -f /etc/nexcess/shell_functions.sh ]; then
  source /etc/nexcess/shell_functions.sh 2> /dev/null
fi
export ZSH=~/.oh-my-zsh

ZSH_THEME="matts"

HYPHEN_INSENSITIVE="true"

DISABLE_AUTO_UPDATE="true"

ENABLE_CORRECTION="true"

COMPLETION_WAITING_DOTS="true"

HIST_STAMPS="mm/dd/yyyy"

plugins=(git colored-man-pages colorize command-not-found cp extract history history-substring-search tmux redis-cli fasd zsh-syntax-highlighting zsh-autosuggestions zsh-completions my-completions)
