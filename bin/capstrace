#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

readonly TMP_EXT=".nexcess.bak"
readonly FLAG_FILE="/tmp/nexcess_strace_flag"
readonly OUTPUT_DIR="${HOME}/nex_strace"

_usage() {
  cat <<- EOF

  Perform a strace of a php-fpm process when requesting a page.
  Outputs strace to home directory. Target is usually site's
  index.php, though not always.

  Usage:

  capstrace <target>

EOF
}

_cmdline() {

  local x;

  for x in ${ARGA[*]}; do

    local args

    case "$x" in
      "--help"|"-h")
        args="${args}-h "
        ;;
      "--file"|"-f")
        args="${args}-f "
        ;;
      "--ip-address"|"-i")
        args="${args}-i "
        ;;
      "--query-string"|"-q")
        args="${args}-q "
        ;;
      "--uri"|"-u")
        args="${args}-u "
        ;;
      *)
        args="${args}${x} ";
        ;;
    esac

  done


  echo "$args";
}

_addCode () {

  local file address addressstring uri uristring query querystring;

  file="$1";
  address="$2";
  uri="$3";
  query="$4"

  mv "$file"{,"$TMP_EXT"} || return 1;

  if [[ "$uri" == "NULL" ]]; then
    uristring="";
  else
    uristring=" and (strlen(strstr(\$_SERVER[\"REQUEST_URI\"],\"$uri\"))>0)";
  fi

  if [[ "$query" == "NULL" ]]; then
    querystring="";
  else
    querystring=" and (strlen(strstr(\$_SERVER[\"QUERY_STRING\"],\"$query\"))>0)";
  fi

  if [[ "$address" == "all" ]]; then
    addressstring="1";
  else
    addressstring="\$_SERVER[\"REMOTE_ADDR\"] == \"$address\" || \$_SERVER[\"HTTP_X_FORWARDED_FOR\"] == \"$address\"";
  fi

  cat << EOF >> "$file"
<?php
  if((@($addressstring)$uristring)$querystring){

    file_put_contents("/tmp" . "/GLOBALS-" . date('Y-m-d-H:i:s'), print_r(\$GLOBALS,true));

    \$f = fopen("$FLAG_FILE",'w');
    sleep(2);
    fclose(\$f);
    unlink("$FLAG_FILE");
  }
?>
EOF

  cat "$file""$TMP_EXT" >> "$file";
  chown "$(getusr)". "$file";

}

_strace () {

  local pid str_pid output

  trap 'return' INT;

  set -m;
  while [ ! -f $FLAG_FILE ]; do
    printf "\rWaiting for process. Press enter to stop.";
    if read -rt0.1; then
      return;
    fi
  done

  output="${OUTPUT_DIR}/strace-$(date "+%F-%T")";
  pid="$(lsof -tf -- $FLAG_FILE)";

  strace -fTrvs200000 -o "$output" -p"$pid" &

  str_pid="$!"

  trap 'break' INT;
  sleep 0.1;
  while(true); do
    if tail "$output" | grep -q "accept(0"; then
      kill "$str_pid";
      break;
    fi
  done

  kill "$str_pid" 2> /dev/null;

  find /tmp/ -name "GLOBALS-*" -user "$(getusr)" -exec mv -t "$OUTPUT_DIR" {} +;

  chmod 600 "${OUTPUT_DIR}"/*
  chown root. "${OUTPUT_DIR}"/*

}

main () {

  local file address uri query;

  while getopts "hf:i:u:q:" OPTION $(_cmdline); do

    case $OPTION in
      h)
        _usage;
        exit 0;
        ;;
      f)
        file="$OPTARG";
        ;;
      i)
        address="$OPTARG";
        ;;
      u)
        uri="$OPTARG";
        ;;
      q)
        query="$OPTARG";
        ;;
    esac

  done

  if [[ -z "$file" ]]; then
    file="${ARGA[0]}";
  fi

  if [[ -z "$address" ]]; then
    address="192.240.191.2";
  fi

  if [[ -z "$uri" ]]; then
    uri="NULL";
  fi

  if [[ -z "$query" ]]; then
    query="NULL";
  fi

  mkdir "${OUTPUT_DIR}" 2>/dev/null;
  chmod 700 "${OUTPUT_DIR}"

  _addCode "$file" "$address" "$uri" "$query" || return 1;

  _strace;

  mv -f "$file"{"$TMP_EXT",}

}

main;
