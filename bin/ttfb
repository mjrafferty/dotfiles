#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

_usage() {
  cat <<- EOF

  Usage: ttfb <domain>

EOF
}

_timetofirstbyte () {
  curl -Lso /dev/null -A 'TTFB' -w "HTTP: %{http_code} Connect: %{time_connect} TTFB: %{time_starttransfer} Total time: %{time_total}\n" "$1";
}


main () {

  if [[ -z "$ARGS" || "$ARGS" =~ --help$|-h$ ]]; then
    _usage;
    return 0;
  fi

  printf "\n%s\n\n" "$(_timetofirstbyte "${ARGA[0]}")";

}

main;
