#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

readonly CAT='/bin/cat'
readonly CURL='/usr/bin/curl'

_usage() {
  "$CAT" <<- EOF

  Usage: ttfb <domain>

EOF
}

_timetofirstbyte () {
  "$CURL" -c ~/.ttfb.cookies --insecure -A "TTFB test" -H "Accept-Encoding: gzip" -Lso /dev/null -w "HTTP: %{http_code} Connect: %{time_connect} TTFB: %{time_starttransfer} Total time: %{time_total}\n" "$1";
}


main () {

  if [[ -z "$ARGS" || "$ARGS" =~ --help$|-h$ ]]; then
    _usage;
    return 0;
  fi

  printf "\n%s\n\n" "$(_timetofirstbyte "${ARGA[0]}")";

}

main;
