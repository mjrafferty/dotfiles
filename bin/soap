#!/usr/bin/env php

<?php

$config=array(
  'domain' => "",
  'user' => "",
  'pass' => "",
  'secure' => "",
  'mode' => ""
);

function _parseCmdLine () {

  global $config;

  $shortopts  = "d:u:p:m:s";

  $longopts  = array(
    "domain:",
    "user:",
    "pass:",
    "mode:",
    "secure",
  );

  $cmdline = getopt($shortopts,$longopts);

  foreach ($cmdline as $opt => $value) {

    switch ($opt) {

    case "d":
    case "domain":
      $config["domain"]=$value;
      break;
    case "u":
    case "user":
      $config["user"]=$value;
      break;
    case "p":
    case "pass":
      $config["pass"]=$value;
      break;
    case "s":
    case "secure":
      $config["secure"]="s";
      break;
    case "m":
    case "mode":
      $config["mode"]=$value;
      break;
    default:
      break;

    }

  }

}

function _soapv1 () {

  global $config;

  $client="";
  $session="";
  $result="";

  try {

    $client = new SoapClient('http'.$config["secure"].'://'.$config["domain"].'/api/soap/?wsdl', array('trace' => 1, 'connection_timeout' => 120));
    $session = $client->login($config["user"], $config["pass"]);

    printf("Request:\n");
    echo $client->__getLastRequest();

    printf("\nResponse:\n");
    echo $client->__getLastResponse();

    $result = $client->call($session, 'product.list');


    printf("\nResult:\n");
    var_dump($result);

  }

  catch (Exception $e) {

    var_dump($e);

  }

  $client->endSession($session);

}

function _soapv2 () {

  global $config;

  $client="";
  $session="";
  $result="";

  try {

    $client = new SoapClient('http'.$config["secure"].'://'.$config["domain"].'/api/v2_soap?wsdl=1', array('trace' => 1, 'connection_timeout' => 120));
    $session = $client->login($config["user"], $config["pass"]);

    printf("Request:\n");
    echo $client->__getLastRequest();

    printf("\nResponse:\n");
    echo $client->__getLastResponse();

    $result = $client->catalogProductList($session);


    printf("\nResult:\n");
    var_dump($result);

  }

  catch (Exception $e) {

    var_dump($e);

  }

  $client->endSession($session);

}

function _soapv2wsi () {

  global $config;

  $client="";
  $session="";
  $result="";

  try {

    $client = new SoapClient('http'.$config["secure"].'://'.$config["domain"].'/api/v2_soap/?wsdl', array('trace' => 1, 'connection_timeout' => 120));
    $session = $client->login((object)array('username' => $config["user"], 'apiKey' => $config["pass"]));

    printf("Request:\n");
    echo $client->__getLastRequest();

    printf("\nResponse:\n");
    echo $client->__getLastResponse();

    $result = $client->catalogProductList((object)array('sessionId' => $session->result, 'filters' => null));

    printf("\nResult:\n");
    var_dump($result->result);

  }

  catch (Exception $e) {

    var_dump($e);

  }

  $client->endSession($session);

}

function _start () {

  global $config;

  _parseCmdLine();

  switch ($config["mode"]) {

  case "v1":
    _soapv1();
    break;

  case "v2":
    _soapv1();
    break;

  case "wsi":
    _soapv2wsi();
    break;

  }

}

_start();

?>
