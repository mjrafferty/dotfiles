#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

readonly GREP='/bin/grep'
readonly LESS='/usr/bin/less'

main () {

  if [[ -z "$ARGS" || "$ARGS" =~ --help$|-h$ ]]; then
    _usage;
    return 0;
  fi

  echo;

  zgrep -h " = -1 E" ${ARGA[*]}\
    | "$GREP" -Ev "( (access|lstat|stat)\(|(EAGAIN|EOPNOTSUPP|EINPROGRESS))" \
    | "$LESS" -SF

  echo;

}

main;
