#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

_usage() {
  cat <<- EOF
  This is the usage
EOF
}

## Check users quota usage
_quotaheader () {
  echo;
  printf "%8s %12s %14s %14s\n" "Username" "Used(%)" "Used(G)" "Total(G)";
  dashes 51;
}
_quotausage () {
  printf "\n%-10s" "$1";
  quota -g "$1" 2> /dev/null \
    | tail -1 \
    | awk '{printf "%10.3f%%  %10.3f GB  %10.3f GB",($2/$3*100),($2/1000/1024),($3/1000/1024)}' 2> /dev/null;
}

main () {

  if [ -z "$ARGS" ] || [[ "$ARGS" =~ --help$|-h$ ]]; then
    _usage;
    return 0;
  fi

  local x;

  case "${ARGS[0]}" in
    "-a"|"--all")
      _quotaheader;
      for x in $(laccounts); do
        _quotausage "$x";
      done \
        | sort;
      ;;
    "-l"|"--large")
      _quotaheader;
      echo;
      for x in $(laccounts); do
        _quotausage "$x";
      done \
        | sort \
        | grep -E '[8,9][0-9]\..*%|1[0-9]{2}\..*%';
      ;;
    "-u"|"--user"|"*")
      _quotaheader;
      if [[ -z "${ARGA[1]}" ]]; then
        _quotausage "$(getusr)";
      else
        for ((x=1;x<${#ARGA[@]};i++)); do
          _quotausage "${ARGA[$x]}";
        done;
      fi;
      echo;
      ;;
  esac
  echo;
}

main;
