#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

main () {

  find ~"$(getusr)" \
    -mindepth 1 \
    -size +100M \
    -group "$(getusr)" \
    -exec parallel du -sh -- {} + | sort -hr | head -20


  find ~"$(getusr)" \
    -mindepth 1 \
    -maxdepth 4 \
    -type d \
    -group "$(getusr)" \
    -exec parallel du -sh -- {} + | sort -hr | head -20

  find ~"$(getusr)"/var/*/mail/* \
    -mindepth 1 \
    -maxdepth 1 \
    -type d \
    -group "$(getusr)"\
    -exec parallel du -sh -- {} + | sort -hr | head -20

}

main;
