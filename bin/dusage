#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

main () {

  cd /home/"$(getusr)" || return;

  printf "\n----- Large Files ------\n";

  find . \
    -mindepth 1 \
    -size +100M \
    -group "$(getusr)" \
    -exec parallel du -sh -- {} + | sort -hr | head -20

  printf "\n----- Large Directories ------\n";

  find . \
    -mindepth 1 \
    -maxdepth 4 \
    -type d \
    -group "$(getusr)" \
    -exec parallel du -sh -- {} + | sort -hr | head -20

  printf "\n----- Large Mailboxes ------\n";

  cd var || return 1;

  find ./*/mail/* \
    -maxdepth 0 \
    -type d \
    -group "$(getusr)"\
    -exec parallel du -sh -- {} + | sort -hr | head -10

  echo;

}

main;
