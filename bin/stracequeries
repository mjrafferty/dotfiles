#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

_usage() {
  cat <<- EOF
  This is the usage
EOF
}

main () {

  if [[ -z "$ARGS" || "$ARGS" =~ --help$|-h$ ]]; then
    _usage;
    return 0;
  fi

  file_desc=($(grep -Pon 'connect\(\K[0-9]*(?=.*(htons\(3306\)|mysql.sock))' "${ARGA[0]}" | tr ':' ' '));

  tail -n +"${file_desc[0]}" "${ARGA[0]}" \
    | grep -Po '(write|sendto)\('"${file_desc[1]}"', "\\?[^\\]*(\\[^\\]*){3}\\.(\\.)?\K[^"]*", ' \
    | sed -e 's_",$_;_' -e 's/\\n//g' \
    | less -S

}

main;
