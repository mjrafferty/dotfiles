#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

readonly LOGDIR="/var/log/send"
readonly DBNAME=""

_usage() {
  cat <<- EOF
  This is the usage
EOF
}

_cmdline() {

  local x;

  for x in ${ARGA[*]}; do

    case "$x" in
      "--help"|"-h")
        args="${args}-h "
        ;;
      *)
        args="${args}${x} "
        ;;
    esac

  done

  echo "$args";
}

_parseLogs () {
  awk "{

  type=\$3;

  if (type==\"info\")
    {
      printf \"INSERT INTO SENDER VALUES ('%s %s','%s','%s');\\n\",\$1,\$2,\$5,\$9;
    }
  else if (type==\"starting\")
    {
      printf \"INSERT INTO RECIPIENT VALUES ('%s %s','%s','%s','%s',NULL);\\n\",\$1,\$2,\$5,\$9,\$10;
    }
  else if (type==\"delivery\")
    {
      printf \"UPDATE RECIPIENT SET response_type='%s' response_msg='%s' WHERE message='%s';\\n\",\$5,\$6,\$4;
    }

  }"
}

main () {

  while getopts "h" OPTION $(_cmdline); do

    case $OPTION in
      h)
        _usage;
        exit 0;
        ;;
    esac

  done

  cat ${LOGDIR}/* \
    | tai64nlocal \
    | _parseLogs;

}

main;
