#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

readonly $DBNAME
_usage() {
  cat <<- EOF
  This is the usage
EOF
}

_cmdline() {

  local x;

  for x in ${ARGA[*]}; do

    case "$x" in
      "--help"|"-h")
        args="${args}-h "
        ;;
      *)
        args="${args}${x} "
        ;;
    esac

  done

  echo "$args";
}

_parseLogs () {
  awk '{

  type=$3;

  if (type="info")
    {
      printf "INSERT INTO sender";
    } else if (type="starting")
    {
      printf "INSERT INTO recipient;
    } else if (type="delivery")
    {
      printf "UPDATE recipient;
    } else if (type="bounce")
    {
      printf "bounce";
    }
  }
}'
}

main () {

  while getopts "hxt:c:" OPTION $(_cmdline); do

    case $OPTION in
      h)
        _usage;
        exit 0;
        ;;
    esac

  done

  tai64nlocal < /var/log/send/* \
  | _parseLogs \
  | sqlite3 "$DBNAME"

}

main;
