#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

_usage() {
  cat <<- EOF

  Prints dashes.

  Usage: dashes <quantity>

EOF
}

main () {
  if [[ -z "$ARGS" || "$ARGS" =~ --help$|-h$ ]]; then
    _usage;
    return 0;
  fi

  local i;

  for ((i=0;i<=ARGA[0];i++)); do
    printf "-";
  done;
}

main;
