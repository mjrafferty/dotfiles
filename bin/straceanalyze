#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

_usage() {
  cat <<- EOF
  This is the usage
EOF
}

main () {

  if [[ -z "$ARGS" || "$ARGS" =~ --help$|-h$ ]]; then
    _usage;
    return 0;
  fi

  local file;

  file="${ARGA[0]}"

  awk '{ gsub(/<|>/,"",$(NF)); print (total_sum += $2),(user_sum += ($2 - $(NF))) }' "$file" \
    | paste - "$file" \
    | less -S;

}

main;
