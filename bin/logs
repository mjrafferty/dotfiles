    LOG_FILES+=("$f");
  done

}

# /var/log/messages
_messages() {

  local files f deep;

  deep="$1";

  if [[ "$deep" == "YES" ]]; then
    mapfile -t files < <("$FIND" /var/log/messages* -type f 2> /dev/null)
  else
    mapfile -t files < <("$FIND" /var/log/messages -type f 2> /dev/null)
  fi

  for f in ${files[*]}; do
    LOG_FILES+=("$f");
  done

}

# IMAP
_imap() {

  local files f deep;

  deep="$1";

  if [[ "$deep" == "YES" ]]; then
    mapfile -t files < <("$FIND" /var/log/imap4-ssl/* -type f 2> /dev/null)
  else
    mapfile -t files < <("$FIND" /var/log/imap4-ssl/current -type f 2> /dev/null)
  fi

  for f in ${files[*]}; do
    LOG_FILES+=("$f");
  done

}

