_pop3() {

  local files f deep;

  deep="$1";

  if [[ "$deep" == "YES" ]]; then
    mapfile -t files < <("$FIND" /var/log/pop3-ssl/* -type f 2> /dev/null)
  else
    mapfile -t files < <("$FIND" /var/log/pop3-ssl/current -type f 2> /dev/null)
  fi

  for f in ${files[*]}; do
    LOG_FILES+=("$f");
  done

}

