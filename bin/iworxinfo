#! /bin/bash

VERSION=$(grep version ~iworx/iworx.ini | grep "[0-9]\.[0-9]\.[0-9]" | awk -F "\"" '{printf $2}')
LETSENC=$(grep lets-encrypt ~iworx/iworx.ini | awk -F"\"" '{print $2}' | sed -e 's/1/On/g' -e 's/0/Off/g')
NPHPSCL=$(grep nexcess-php-scl ~iworx/iworx.ini | awk -F"\"" '{print $2}' | sed -e 's/1/On/g' -e 's/0/Off/g')
NAMSRV1=$(grep ns1= ~iworx/iworx.ini | awk -F "\"" '{printf $2}')
NAMSRV2=$(grep ns2= ~iworx/iworx.ini | awk -F "\"" '{printf $2}')
HSTNAME=$(grep hostname ~iworx/iworx.ini | sed 's/"/\n/g' | grep ".nexcess.net")

printf "%-20s:\e[0;37m %2s \e[0m \n" "InterWorx Version" " ${VERSION}"
printf "%-20s:\e[0;37m %2s \e[0m \n" "Host Name" " ${HSTNAME}"
printf "\n"
printf "%-20s:\e[0;35m %2s \e[0m \n" "Name Server 1" " ${NAMSRV1}"
printf "%-20s:\e[0;35m %2s \e[0m \n" "Name Server 2" " ${NAMSRV2}"
printf "\n"
printf "%-20s:\e[1;31m %2s \e[0m \n" "Lets Encrypt" " ${LETSENC}"
printf "%-20s:\e[1;31m %2s \e[0m \n" "PHP SCL Plugin" " ${NPHPSCL}"
