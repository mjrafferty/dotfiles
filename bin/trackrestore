#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

readonly EMAIL_SUBJECT="Restore Complete"
readonly EMAIL_ADDR="mrafferty@nexcess.net"

[[ -n "$TICKET" ]] || read -rp "Ticket: " TICKET;

_usage() {
  cat <<- EOF
  This is the usage
EOF
}

_cmdline() {

  local x;

  for x in ${ARGA[*]}; do

    local delim=""

    case "$x" in
      "--help"|"-h")
        args="${args}-h "
        ;;
      *) [[ "${x:0:1}" == "-" ]] || delim="\"";
        args="${args}${delim}${x}${delim} "
        ;;
    esac

  done


  echo "$args";
}

_wait () {

  while [[ -d /proc/$1 ]]; do
    sleep 5;
  done;

}

_notify () {

  mail -s "$EMAIL_SUBJECT" "$EMAIL_ADDR" <<- EOF
Restore for user $1 complete on $HOSTNAME

See ticket $TICKET

EOF

}

main () {

  while getopts "hxt:c:" OPTION "$(_cmdline)"; do

    case $OPTION in
      h)
        _usage;
        exit 0;
        ;;
    esac

  done


  restorepid=$(pgrep -P "$(pgrep -fo cdp)" -fn cdp);
  restoreuser=$(stat -c "%U" "$(lsof -p "$restorepid" -ad0 | tail -n1 | awk '{print $NF}')")

  _wait "$restorepid";

  _notify "$restoreuser";

}

main &
