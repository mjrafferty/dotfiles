#! /bin/bash

readonly ARGS="$*"
readonly ARGA=("$@")

alias awk='/bin/awk'
alias cat='/bin/cat'
alias lsof='/usr/sbin/lsof'
alias mail='/bin/mail'
alias pgrep='/usr/bin/pgrep'
alias sleep='/bin/sleep'
alias stat='/usr/bin/stat'
alias tail='/usr/bin/tail'

readonly EMAIL_SUBJECT="Restore Complete"
readonly DEFAULT_ADDR="support@nexcess.net"

readonly EMAIL_ADDR="${1-$DEFAULT_ADDR}"

[[ -n "$TICKET" ]] || read -rp "Ticket: " TICKET;

# Show usage
_usage() {
  cat <<- EOF
  This is the usage
EOF
}

# Parse long command line options
_cmdline() {

  local x;

  for x in ${ARGA[*]}; do

    local delim=""

    case "$x" in
      "--help"|"-h")
        args="${args}-h "
        ;;
      *) [[ "${x:0:1}" == "-" ]] || delim="\"";
        args="${args}${delim}${x}${delim} "
        ;;
    esac

  done


  echo "$args";
}

# Wait for restore to complete
_wait () {

  while [[ -d /proc/$1 ]]; do
    sleep 5;
  done;

}

# Send notification email
_notify () {

  mail -s "$EMAIL_SUBJECT" "$EMAIL_ADDR" <<- EOF
Restore for user $1 complete on $HOSTNAME

See ticket $TICKET

EOF

}

# Main
main () {

  while getopts "hxt:c:" OPTION "$(_cmdline)"; do

    case $OPTION in
      h)
        _usage;
        exit 0;
        ;;
    esac

  done

  local restorepid currentfile restoreuser;

  for ((x=0;x<60;x++)); do
    restorepid=$(pgrep -P "$(pgrep -fo cdp)" -fn cdp);
    [[ -n "$restorepid" ]] && break;
    sleep 5;
  done

  [[ -n "$restorepid" ]] || exit 1;

  for ((x=0;x<60;x++)); do
    currentfile=$(lsof -p "$restorepid" -ad0 | tail -n1 | awk '{print $NF}')
    [[ -n "$currentfile" ]] && break;
    sleep 5;
  done

  [[ -n "$currentfile" ]] || exit 1;

  restoreuser=$(stat -c "%U" "$currentfile")

  _wait "$restorepid";

  _notify "$restoreuser";

}

main &
