#! /bin/awk -f

function red(s) {
    printf "\033[1;31m" s "\033[0m "
}

function green(s) {
    printf "\033[1;32m" s "\033[0m "
}

function yellow(s) {
    printf "\033[1;33m" s "\033[0m "
}

function blue(s) {
    printf "\033[1;34m" s "\033[0m "
}

BEGIN {

  inc=0;
  max=0;
}

{
  time[inc]=$1;
  hits[inc]=$2;

  if ($2>max)
  {
    max=$2
  }
  inc++
}

END {

  for (x=0;x<=inc;x++)
  {
    printf "%s\t%s\t",red(time[x]),yellow(hits[x]);
    for (i=0; i<(hits[x] * 100 / max);i++)
    {
      printf green("*");
    }
    printf "\n"
  }
}
