#! /bin/zsh

[ -r "${HOME}/.iterm2_shell_integration.zsh" ] && source "${HOME}/.iterm2_shell_integration.zsh"

readonly SED='/usr/local/bin/sed'
readonly GREP='/usr/local/bin/grep'
readonly FIND='/usr/local/bin/find'
readonly READLINK='/usr/bin/readlink'

[ -r ~/dotfiles/.commonrc ] && source ~/dotfiles/.commonrc;

alias ls='ls -FG'
alias rm='rm -r'
unalias chown;
unalias chmod;

export PATH="/usr/local/bin:/usr/local/Cellar/php@7.1/7.1.17/bin:$PATH:/Users/matthewrafferty/.local/bin"

alias sshhome="ssh -p 8076 matt@mattrafferty.asuscomm.com -t ssh matt@192.168.1.210"
alias sshpi="ssh -p 8076 matt@mattrafferty.asuscomm.com"
#kitty + complete setup zsh | source /dev/stdin

update_brew_links() {
	for x in $(find /usr/local/Cellar/*/*/bin/*); do
		bin="${x##*/}";
		if [[ ! -e /usr/local/bin/${bin} ]]; then
			ln $x /usr/local/bin/${bin};
		fi
	done
}
