# vim:ft=bash
################################################################
# Anaconda Environment

typeset -g RIFF_CONDA_PREFIX
typeset -g RIFF_CONDA_ENV_PATH
typeset -g RIFF_ANACONDA_LEFT_DELIMITER
typeset -g RIFF_ANACONDA_RIGHT_DELIMITER

_riff_anaconda_run() {

  local p=${RIFF_CONDA_PREFIX:-$RIFF_CONDA_ENV_PATH}

  if [[ -n $p ]]; then

    local msg="$RIFF_ANACONDA_LEFT_DELIMITER${${p:t}//\%/%%}$RIFF_ANACONDA_RIGHT_DELIMITER"

    _RIFF_RETURN_MESSAGE="$msg"

  fi

}
