# vim:ft=bash
################################################################
# AWS Profile

typeset -g RIFF_AWS_PROFILE
typeset -g RIFF_AWS_DEFAULT_PROFILE

prompt_aws() {

  local aws_profile="${RIFF_AWS_PROFILE:-$RIFF_AWS_DEFAULT_PROFILE}"

  if [[ -n "$aws_profile" ]]; then
    _RIFF_RETURN_MESSAGE="${aws_profile//\%/%%}"
  fi

}
