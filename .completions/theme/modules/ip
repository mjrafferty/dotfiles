# vim:ft=bash
################################################################
# Segment to display the current IP address

typeset -g RIFF_IP_FG="white"
typeset -g RIFF_IP_BG="cyan"
typeset -g RIFF_IP_INTERFACE="en0"

_riff_ip_run() {

  _riff_parse_ip $RIFF_IP_INTERFACE || return

  _RIFF_RETURN_MESSAGE="${_RIFF_RETURN_MESSAGE//\%/%%}"

}
