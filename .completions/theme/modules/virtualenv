# vim:ft=bash
################################################################
# Virtualenv: current working virtualenv
# More information on virtualenv (Python):
# https://virtualenv.pypa.io/en/latest/

typeset -g RIFF_VIRTUALENV_FG="white"
typeset -g RIFF_VIRTUALENV_BG="blue"

_riff_virtualenv_cache_key() {
  _RIFF_RETURN_MESSAGE="$VIRTUAL_ENV"
}

_riff_virtualenv_run() {

  if [[ -n "$VIRTUAL_ENV" ]]; then
    _RIFF_RETURN_MESSAGE="${${VIRTUAL_ENV:t}//\%/%%}"
  fi

}
