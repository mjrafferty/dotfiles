# vim:ft=bash

################################################################
# User: user (who am I)
# Note that if $DEFAULT_USER is not set, this prompt module will always print

typeset -g RIFF_USER_FG
typeset -g RIFF_USER_BG

RIFF_USER_FG="white"
RIFF_USER_BG="green"

_riff_user_run() {

  local user
  user="$USER"

  if [[ $RIFF_ALWAYS_SHOW_USER != true && $user == $DEFAULT_USER ]]; then
    _RIFF_RETURN_MESSAGE="";
    return;
  fi

  _RIFF_RETURN_MESSAGE="$USER";

}
