# vim:ft=bash

typeset -g  RIFF_GAME_BG="darkblue"

typeset -gi _RIFF_GAME_CASH=1000
typeset -g  _RIFF_BOLD="$(tput bold)"
typeset -g  _RIFF_NOBOLD="$(tput sgr0)"

typeset -ag _RIFF_GAME_SYMBOLS

_RIFF_GAME_SYMBOLS=(
  "%F{1}üçí%F{7}"
  "%F{10}üçè%F{7}"
  "%F{9}üçì%F{7}"
  "%F{92}üçá%F{7}"
  "%F{162}üçâ%F{7}"
  "%F{11}‚≠ê%F{7}"
  "%F{11}üåü%F{7}"
  "%F{10}üíµ%F{7}"
  )

_riff_game_run (){

  local slots
  local win=0
  local winst=""

  ((n1 = RANDOM % 5 + 1))
  ((n2 = RANDOM % 5 + 1))
  ((n3 = RANDOM % 5 + 1))

  if (((n1==n2) || (n1==n3) || (n2==n3))); then

    if (((n1==n2) && (n1==n3))); then
      ((win=100*(n1)));
      winst=" ${_RIFF_GAME_SYMBOLS[7]} ${win} ${_RIFF_GAME_SYMBOLS[7]} "
    else
      win=10;
      winst="${_RIFF_GAME_SYMBOLS[6]}"
    fi

  fi

  ((_RIFF_GAME_CASH+=(win-10)))

  slots="[${_RIFF_GAME_SYMBOLS[n1]}|${_RIFF_GAME_SYMBOLS[n2]}|${_RIFF_GAME_SYMBOLS[n3]}]"
  _RIFF_RETURN_MESSAGE="${_RIFF_BOLD}${slots}${winst}${_RIFF_GAME_SYMBOLS[8]}:${_RIFF_GAME_CASH}${_RIFF_NOBOLD}"

}
